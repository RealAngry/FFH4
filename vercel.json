{
  "version": 2,
  "builds": [
    {
      "src": "api/index.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/diagnostics",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/test",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/status",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/auth/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/users/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/students/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/export/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.js"
    },
    {
      "src": "/",
      "dest": "/api/index.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
} 
